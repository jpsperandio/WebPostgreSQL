@model IEnumerable<WebPostgreSQL.Models.HistoricoCorrida>

@{
    ViewData["Title"] = "Index";
}

<h1>Histórico de corridas</h1>
<p></p>
<p></p>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar corrida</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompetidorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PistaCorridaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCorrida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoGasto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompetidorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PistaCorridaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCorrida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoGasto)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="btn  btn-outline-success" asp-route-id="@item.Id">Details</a> |              
            </td>
        </tr>
}
    </tbody>
</table>

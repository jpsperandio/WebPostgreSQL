@model WebPostgreSQL.Models.PistaCorrida

@{
    ViewData["Title"] = "Delete";
}

<h1>Deseja deletar a pista selecionada?</h1>

<h3></h3>
<div>
    <h4>Os dados deletados não podem ser recuperados.</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger text-right" /> 
        <a asp-action="Index" class="btn btn-outline-warning text-left">Cancelar</a>
    </form>
</div>
